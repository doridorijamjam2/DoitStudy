<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.1//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring.study.security.Dao">	
	<select id="selectUser" resultType="com.spring.study.security.UserDetailsDto">
		SELECT * FROM MP_MEMBER WHERE USERID=#{userId}
	</select>
	
	<select id="getAuthList" resultType="String">
		SELECT AUTHORITY FROM USERAUTH WHERE USERID=#{userId}
	</select>
		
</mapper>